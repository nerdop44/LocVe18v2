<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Heredar la vista account_budget.view_account_budget_form-->
        <record id="crossovered_budget_view_form_inherit" model="ir.ui.view">
            <field name="name">account_budget_view_form_inherit</field>
            <field name="model">account.budget</field>
            <field name="inherit_id" ref="account_budget.view_account_budget_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='budget_line_ids']/list/field[@name='currency_id']" position="after">
                    <field name="currency_id_dif" column_invisible="True"/>
                </xpath>
            </field>
        </record>

        <!-- Heredar la vista account_budget.view_account_budget_line_tree -->
        <record id="view_crossovered_budget_line_tree_inherit" model="ir.ui.view">
            <field name="name">view_account_budget_line_tree_inherit</field>
            <field name="model">account.budget.line</field>
            <field name="inherit_id" ref="account_budget.view_account_budget_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="currency_id_dif" column_invisible="True"/>
                </xpath>
            </field>
        </record>

        <!-- Heredar la vista account_budget.view_account_budget_line_form -->
        <record id="view_crossovered_budget_line_form_inherit" model="ir.ui.view">
            <field name="name">view_account_budget_line_form_inherit</field>
            <field name="model">account.budget.line</field>
            <field name="inherit_id" ref="account_budget.view_account_budget_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="currency_id_dif" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>