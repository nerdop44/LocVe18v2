<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="extra_dual_currency_setting" model="ir.ui.view">
            <field name="name">Extra dual currency setting</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_multi_currency']/ancestor::setting" position="after">
                    <setting id="dual_currency" string="Dualidad de Moneda" help="ConfiguraciÃ³n de la moneda secundaria para reportes y asientos.">
                        <field name="currency_id_dif" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                        <field name="group_multi_currency" invisible="1"/>
                        <div class="mt-2">
                            <button type="action" name="%(base.action_currency_form)d" string="Configurar Monedas" class="btn-link" icon="oi-arrow-right"/>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>