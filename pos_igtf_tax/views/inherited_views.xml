<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.view.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="x_is_foreign_exchange" />
                <field 
                    name="x_igtf_percentage" 
                    invisible="not x_is_foreign_exchange"
                    required="x_is_foreign_exchange"
                />
            </field>
        </field>
    </record>
    <record id="pos_order_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.view.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="amount_paid" position="after">
                <label for="x_igtf_amount" />
                <field name="x_igtf_amount" force_save="1" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
            </field>
        </field>
    </record>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_pos_hr']/ancestor::setting" position="after">
                <setting id="l10n_ve_pos_igtf" string="IGTF en POS" help="ConfiguraciÃ³n del impuesto IGTF para pagos en divisas.">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="aplicar_igtf" string="Habilitar IGTF" class="col-lg-3 o_light_label"/>
                            <field name="aplicar_igtf"/>
                        </div>
                        <div class="row mt8" invisible="not aplicar_igtf">
                            <label for="pos_x_igtf_product_id" string="Producto IGTF" class="col-lg-3 o_light_label"/>
                            <field name="pos_x_igtf_product_id" domain="[('available_in_pos','=',True)]" options="{'no_create': True}"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
