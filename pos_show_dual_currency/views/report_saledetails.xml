<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="pos_daily_report" inherit_id="point_of_sale.pos_session_sales_details">
        <xpath expr="//table//tr[1]//th[last()]" position="after">
            <th class="text-end">Monto Ref</th>
        </xpath>
        <xpath expr="//tr[@t-foreach='products_info[\'products\']']//td[last()]" position="after">
            <td class="text-end">
                <span style="color: red">
                    <t t-esc='symbol_ref'/>
                    <t t-esc='line["price_unit_ref"]' t-options="{'widget': 'float', 'precision': currency_precision_ref}"/>
                </span>
            </td>
        </xpath>

        <xpath expr="//t[@t-foreach='payments']" position="replace">
            <t t-foreach='payments' t-as='method'>
                <tr>
                    <td>
                        <t t-esc="method['name']"/>
                    </td>
                    <td>
                        <t t-esc="method['final_count']" t-options="{'widget': 'float', 'precision': currency_precision}"/>
                        <t t-esc='symbol'/>
                        /
                        <span style="color: red">
                            <t t-esc='symbol_ref'/>
                            <t t-esc="method['total_ref']"
                                t-options="{'widget': 'float', 'precision': currency_precision_ref}"/>
                        </span>
                    </td>
                </tr>
            </t>
        </xpath>

        <xpath expr="//tr[@t-foreach='taxes']" position="replace">
            <tr t-foreach='taxes' t-as='tax'>
                <td>
                    <t t-esc="tax['name']"/>
                </td>
                <td>
                    <t t-esc="tax['tax_amount']" t-options="{'widget': 'float', 'precision': currency_precision}"/>
                    <t t-esc='symbol'/>
                    /
                    <span style="color: red">
                        <t t-esc='symbol_ref'/>
                        <t t-esc="tax['tax_amount_ref']/rate_today"
                           t-options="{'widget': 'float', 'precision': currency_precision_ref}"/>
                    </span>
                </td>
                <td>
                    <t t-esc="tax['base_amount']" t-options="{'widget': 'float', 'precision': currency_precision}"/>
                    <t t-esc='symbol'/>
                    /
                    <span style="color: red">
                        <t t-esc='symbol_ref'/>
                        <t t-esc="tax['base_amount_ref']"
                           t-options="{'widget': 'float', 'precision': currency_precision_ref}"/>
                    </span>
                </td>
            </tr>
        </xpath>
        <xpath expr="//span[@t-out='products_info[\'total\']']" position="after">
            /
            <span style="color: red">
                <t t-esc='symbol_ref'/>
                <t t-esc="total_paid_ref"
                   t-options="{'widget': 'float', 'precision': currency_precision_ref}"/>
            </span>
        </xpath>
    </template>
</odoo>