<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-content')]" position="before">
            <t t-if="this.pos and this.pos.config and this.pos.config.show_dual_currency">
                <span class="currency" style="position: absolute;
                                                top: 2px;
                                                right: 2px;
                                                vertical-align: top;
                                                color: red;
                                                line-height: 13px;
                                                background: #5effb0;
                                                padding: 2px 5px;
                                                border-radius: 2px;
                                                font-weight: bold;
                                                font-size: x-small;
                                                z-index: 10;">
                    <t t-esc="this.pos.get_product_price_ref_display(props.product)"/>
                </span>
            </t>
        </xpath>
    </t>

