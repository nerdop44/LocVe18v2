<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ExtensionPaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-status-remaining')]//span[hasclass('amount')]" position="inside">
            <t t-if="pos.config.show_dual_currency">
                <br/>
                <span class="highlight text-danger fw-bolder" style="font-size: 0.8rem;">
                    <t t-esc="remainingTextUSD" />
                </span>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('payment-status-change')]//span[hasclass('amount')]" position="inside">
             <t t-if="pos.config.show_dual_currency">
                <br/>
                 <span class="highlight text-success fw-bolder" style="font-size: 0.8rem;">
                    <t t-esc="changeTextUSD" />
                </span>
            </t>
        </xpath>
    </t>
</templates>
